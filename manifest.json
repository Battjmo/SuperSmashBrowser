{
  "name": "SuperSmashBrowser",
  "version": "1.0",
  "description": "Build an Extension!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
  "activeTab"
],
"icons": {
  "16": "./logo.png",
  "48": "./logo48.png",
  "128": "./logo128.png"
},
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*"],
    "js": [
      "content_script.js",
      "./js/vanish_everything.js",
      "./js/vanish.js",
      "./js/hammer.js"
    ]
  }]
}
