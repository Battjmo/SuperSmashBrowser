{
  "name": "SuperSmashBrowser",
  "version": "1.0",
  "description": "Build an Extension!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
  "activeTab"
],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*", "file://*"],
    "js": ["content_script.js", "/js/vanish_everything.js", "/js/vanish.js"]
  }]
}
